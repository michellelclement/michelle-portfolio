<section class="hero-about">
  <div class="hero-about__container">
    
    <!-- Header -->
    <h1 class="hero-about__header js-hero-animate-this">{{ heading }}</h1>
    
    <!-- Image -->
    <div class="hero-about__image js-hero-animate-this">
      {% include "partials/image-oval-about.njk" %}
    </div>
    
    <!-- Subheading -->
    <div class="hero-about__cta js-hero-animate-this">
      <p class="hero__sub-header--about js-hero-animate-this">{{ subHeading }}</p>
      <a class="button hero-about__button js-hero-animate-this" href="/">
        <span>
          {{ buttonText }}<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 32 32"><path stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.333 22.667 22.667 9.333M9.333 9.333h13.334v13.334"/></svg>
        </span>
      </a>
    </div>

  </div>    
  <p class="hero-about__scroll js-hero-animate-this">Scroll for details</p>
</section>
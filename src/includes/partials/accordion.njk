<section class="accordion-section">
  <div class="accordion-section__container">
    <h3>This is the accordion Header</h3>

    <div class="accordion">
      
      <div class="accordion__item">
        <button class="accordion__button js-accordion">
          <h3 class="accordion__item-header">Accordion Item Header</h3>
          <div class="accordion__icon">
            <span class="visually-hidden">Toggle accord</span>
          </div>
        </button>
        
        <div class="accordion__item-content">
          <div class="accordion__item-content-container">
            <ul>
              {% for item in accordionContent1 %}
